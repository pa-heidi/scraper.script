# Website Scraping Plan Generator Configuration
# Copy this file to .env and update with your values

# AI Model Configuration
# Redis Configuration (Local Docker)
REDIS_URL=redis://:redis123@localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# Set these environment variables to control all services
LLM_PRIMARY_PROVIDER=openai     # or ollama
LLM_FALLBACK_PROVIDER=ollama    # or openai
OPENAI_MODEL=gpt-4o-mini        # Used by ALL services when OpenAI selected
OLLAMA_MODEL=llama3.2:1b        # Used by ALL services when Ollama selected

# Service Configuration
NODE_ENV=development
LOG_LEVEL=info

# Orchestrator Settings
MAX_CONCURRENT_EXECUTIONS=5
EXECUTION_TIMEOUT=300000
RETRY_ATTEMPTS=3
METRICS_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000

# Browser Configuration
PLAYWRIGHT_BROWSERS_PATH=./browsers
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false

# Optional: Proxy Configuration
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080